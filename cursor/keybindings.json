// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+up",
        "command": "workbench.action.toggleMaximizedPanel",
    },
    {
        "key": "cmd+down",
        "command": "workbench.action.toggleMaximizedPanel",
    },
    {
        "key": "] d",
        "command": "editor.action.marker.nextInFiles",
        "when": "editorFocus  && neovim.mode != 'insert'"
    },
    {
        "key": "[ d",
        "command": "editor.action.marker.prevInFiles",
        "when": "editorFocus  && neovim.mode != 'insert'"
    },
    {
        "key": "space r n",
        "command": "editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly && neovim.mode != 'insert'"
    },
    {
        "key": "ctrl+y",
        "command": "acceptSelectedCodeAction",
        "when": "codeActionMenuVisible"
    },
    {
        "key": "ctrl+y",
        "command": "acceptSelectedSuggestion",
        "when": "suggestionCanResolve"
    },
    {
        "key": "ctrl+y",
        "command": "insertSnippet",
        "when": "editorTextFocus && hasSnippetCompletions && !editorTabMovesFocus && !inSnippetMode"
    },
    {
        "key": "ctrl+shift+l",
        "command": "settings.cycle.relativeLineNumbers"
    },
    {
        "key": "ctrl+shift+t",
        "command": "settings.cycle.tabBar"
    }
]