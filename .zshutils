# Shortcuts for editors. And also for VS Code
alias v="nvim"
alias c="code"

# Dotfile shortcuts
alias zrc="v ~/.zshrc"
alias zut="v ~/Documents/repos/dotfiles/.zshutils"
alias ala="v ~/Documents/repos/dotfiles/alacritty/alacritty.yml"
alias vd="v ~/Documents/repos/dotfiles/nvim"
alias txd="v ~/Documents/repos/dotfiles/.tmux.conf"
alias ske="v ~/Documents/repos/dotfiles/sketchybar/"

# Being re-source-ful
alias szrc="source ~/.zshrc"
alias sala="source ~/.config/alacritty/alacritty.yml"
alias sske="sketchybar --reload"

# Folder Shortcuts
alias repos="~/Documents/repos"
alias tz="~/Documents/testzone"

# Repo shortcuts
alias dot="~/Documents/repos/dotfiles"

# tmux shortcuts
alias txls="tmux ls"
function txa() { tmux attach -t "$@" }
function txks() { tmux kill-session -t "$@" }

# Utility Functions
function mkcd() { mkdir "$@" && cd "$@"; }
function mkc() { mkdir "$@" && c "$@"; }


