#----- ZINIT
# Main Setup
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

if [ ! -d "$ZINIT_HOME" ]; then
  mkdir -p "$(dirname $ZINIT_HOME)"
  git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

source $ZINIT_HOME/zinit.zsh

# Plugins
zinit ice depth=1; zinit light romkatv/powerlevel10k
zinit light zsh-users/zsh-syntax-highlighting

# P10k
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Keybinds
bindkey '^[[A' history-search-backward # Up Arrow
bindkey '^[[B' history-search-forward # Down Arrow

# History Settings
HISTSIZE=1000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups
#----- END ZINIT

# Options
setopt AUTO_CD

# Shortcuts for editors
alias v="nvim"

# Repo shortcuts
alias dot="~/codes/GitHub/dotfiles"

# Dotfile shortcuts
alias zrc="v ~/.zshrc"
alias zut="v ~/codes/GitHub/dotfiles/.zshutils"
alias ala="v ~/codes/GitHub/dotfiles/alacritty/alacritty.toml"
alias vd="~/codes/GitHub/dotfiles/nvim && v"
alias tx="v ~/codes/GitHub/dotfiles/.tmux.conf"

# Folder Shortcuts
alias repos="~/codes/repos"
alias tz="~/codes/testzone"
alias ex="~/Exercism"

# tmux shortcuts
alias txl="tmux ls"
alias txd="tmux detach"
function txn() { if [ "$@" ]; then tmux new -s "$@"; else tmux; fi }
function txa() { if [ "$@" ]; then tmux attach -t "$@"; else tmux attach; fi }
function txks() { tmux kill-session -t "$@" }
function txkw() { tmux kill-window -t "$@" }

# Numbers are for chumps
alias pip="pip3"
alias python="python3"

# Utility Functions
alias l="exa -lha --git --no-user"
alias lg="lazygit"
alias gconfig="git config --global -e"
function mkcd() { mkdir "$@" && cd "$@"; }
function mkc() { mkdir "$@" && c "$@"; }
function ff {
  if [[ $# -eq 1 ]]; then
    selected=1
  else
    selected=$(find ~/codes/GitHub ~/codes/GitHub/dotfiles ~/codes/testzone ~/codes/repos -mindepth 1 -maxdepth 1 -type d | fzf)
  fi

  if [[ $selected ]]; then
    selected_name=$(basename "$selected" | tr . _)
    tmux_running=$(pgrep tmux)

    if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
      tmux new-session -s $selected_name -c $selected
      exit 0
    fi

    if ! tmux has-session -t=$selected_name 2> /dev/null; then
        tmux new-session -ds $selected_name -c $selected
    fi

    tmux switch-client -t $selected_name
  fi
}
addBeforePath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}
addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
} 

export NVM_DIR=~/.nvm
[[ -s "$NVM_DIR/nvm.sh" ]] && source "$NVM_DIR/nvm.sh" --no-use

export MODULAR_HOME="/Users/nealp/.modular"

addBeforePath $NVM_DIR/versions/node/v18.17.1/bin:$PATH
addBeforePath /Users/nealp/Library/Python/3.9/bin
addToPath /opt/homebrew/bin
addToPath /usr/bin
addToPath /usr/local/bin
addToPath /bin

