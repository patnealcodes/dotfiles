#----- ZINIT
# Main Setup
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

if [ ! -d "$ZINIT_HOME" ]; then
  mkdir -p "$(dirname $ZINIT_HOME)"
  git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

source $ZINIT_HOME/zinit.zsh

#RipGrep Config
RIPGREP_CONFIG_PATH=$HOME/.ripgreprc

#Deno
DENO_TLS_CA_STORE=system

# Prompt
zinit ice depth=1; zinit light romkatv/powerlevel10k

# Plugins
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions

# Load Completions
autoload -U compinit && compinit

# P10k
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Keybinds
bindkey '^[OA' history-search-backward
bindkey '^[[A' history-search-backward
bindkey '^[OB' history-search-forward
bindkey '^[[B' history-search-forward

# History Settings
HISTSIZE=1000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' menu no

eval "$(zoxide init zsh)"
#----- END ZINIT

. "$HOME/.asdf/asdf.sh"

# Options
setopt AUTO_CD

# Shortcuts for editors
alias v="nvim"
alias z="zed"

# Repo shortcuts
alias dot="~/codes/GitHub/dotfiles"

# Dotfile shortcuts
alias zrc="v ~/.zshrc"
alias zut="v ~/codes/GitHub/dotfiles/.zshutils"
alias ala="v ~/codes/GitHub/dotfiles/alacritty/alacritty.toml"
alias wez="v ~/codes/GitHub/dotfiles/wezterm/wezterm.lua"
alias vd="~/codes/GitHub/dotfiles/nvim && v"
alias tx="v ~/codes/GitHub/dotfiles/.tmux.conf"

# Folder Shortcuts
alias repos="~/codes/repos"
alias tz="~/codes/testzone"
alias ex="~/Exercism"

# tmux shortcuts
alias txl="tmux ls"
alias txd="tmux detach"
function txn() { if [ "$@" ]; then tmux new -s "$@"; else tmux; fi }
function txa() { if [ "$@" ]; then tmux attach -t "$@"; else tmux attach; fi }
function txks() { tmux kill-session -t "$@" }
function txkw() { tmux kill-window -t "$@" }

# Numbers are for chumps
alias pip="pip3"
alias python="python3"

# Utility Functions
alias l="exa -lha --no-user"
alias lg="lazygit"
alias gconfig="git config --global"
function mkcd() { mkdir "$@" && cd "$@"; }
function mkc() { mkdir "$@" && c "$@"; }
alias ff="tmux neww bash ~/codes/GitHub/dotfiles/tmux-sessionizer"

addBeforePath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}
addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
} 

